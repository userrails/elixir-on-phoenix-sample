<h2>Show task</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @task.name %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @task.body %>
  </li>

</ul>

<%= link "Edit", to: task_path(@conn, :edit, @task) %> &nbsp;
<%= link "Back", to: task_path(@conn, :index) %> &nbsp;
<%= link "Comments", to: task_comment_path(@conn, :index, @task) %>
